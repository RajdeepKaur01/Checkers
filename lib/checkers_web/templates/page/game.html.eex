<%= if @current_user do %>
<div class="row">
  <div class="col">
    <h1>Checkers Game: <span id="player"><%= @game %></span></h1>
    <script>
      window.gameName = "<%= @game %>";
      window.userName = "<%= @current_user.email %>";
    </script>

    <div id="root">
      <p>React app not loaded...</p>
    </div>
  </div>
</div>
<% else %>
<h1>Checkers Game</h1>
<h1 class="restart"><%= link "Login First", to: page_path(@conn, :index), class: "btn btn-primary log-in" %></h1>
<% end %>
